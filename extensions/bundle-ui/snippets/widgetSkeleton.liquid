{% comment %} CSS code for widget {% endcomment %}
{{ 'widgetSkeleton.css' | asset_url | stylesheet_tag }}

  <div class="skeleton-container">


  <div class="steps-heading-container-skeleton">

    {% comment %} Step headings {% endcomment %}
    {% for i in (1..5) %}
      <div class="step-heading-container-skeleton">
        <div class="skeleton-bg skeleton-circle"></div>

        {{ smallShortTextSkeleton }}
      </div>
    {% endfor %}


    {% comment %} Step description {% endcomment %}
    <div class="skeleton-bg step-description-skeleton"></div>

    {% comment %} Product step {% endcomment %}
    <div class="products-container-skeleton">

      {% for i in (1..8) %}
        {% comment %} Individualproducts {% endcomment %}
        <div class="product-skeleton">
          <div class="product-img-skeleton"></div>
          <div class="product-details">
            <div class="product-title-and-price-skeleton">
              {{ smallLongTextSkeleton }}
              {{ smallShortTextSkeleton }}
            </div>

            {% comment %} Product action buttons {% endcomment %}
            <div class="width-full">
              {{ smallBtnSkeleton }}
              {{ smallBtnSkeleton }}
            </div>
          </div>
        </div>
      {% endfor %}

    </div>

  </div>


  {% comment %} Desktop step navigation {% endcomment %}
  <div class="nav-buttons-skeleton">
    {{ bigBtnSkeleton }}

      <div class="next-step-btn-container">
      {{ bigBtnSkeleton }}

      {% comment %} Tooltip to indicate how many products a customer needs to select {% endcomment %}
      <div class="skeleton-bg tooltip-skeleton"></div>
    </div>
  </div>

</div>