{% assign pageBundleNamespace = page.metafields.neat_bundles_app %}


{% if pageBundleNamespace == blank %}
  {% render 'widget'
  , bundleId: block.settings.bundleId %}
{% endif %}



{% schema %}
  {
    "name": "Neat bundles widget",
    "target": "section",
    "settings": [
      {
        "type": "number",
        "id": "bundleId",
        "label": "Enter Bundle ID",
        "placeholder": "e.g. 204",
        "info": "You can find the Bundle ID in the Neat Bundles app, next to the name of each bundle."
      }
    ]
  }
{% endschema %}